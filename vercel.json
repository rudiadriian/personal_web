{
    "version": 2,
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php"
      }
    },
    "routes": [
      {
        "src": "/build/(.*)",
        "dest": "/public/build/$1"
      },
      {
        "src": "/(css|js|images|rudi.png|favicon.svg)/(.*)",
        "dest": "/public/$1/$2"
      },
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "VIEW_COMPILED_PATH": "/tmp",
      "CACHE_DRIVER": "array",
      "SESSION_DRIVER": "cookie"
    }
  }
